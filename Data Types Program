using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
    static void Main(string[] args)
    {
        int applePieces;
        double totalPrice;
        int convertedPrice; 

        Console.Write("Enter the pieces of apple: ");
        applePieces = Convert.ToInt16(Console.ReadLine());
        Console.Write("Enter the total price of apple(s): ");
        totalPrice = Convert.ToDouble(Console.ReadLine());
        convertedPrice = (int) totalPrice;

        Console.WriteLine("The total price of " + applePieces + " apple(s) is " + totalPrice);
        Console.WriteLine("The value of the original price is " + totalPrice);
        Console.WriteLine("The value of the original price is " + totalPrice);
        Console.WriteLine("The value of the converted price is " + convertedPrice);

    }
    }
}
